# =============================================================================
# Raven SaaS - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in production values.
#   cp .env.example .env
#
# NEVER commit .env to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# Django Core
# ---------------------------------------------------------------------------
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=changeme-generate-a-real-secret-key

# Set to False in production (REQUIRED)
DEBUG=False

# Comma-separated list of domains/IPs that can serve this app
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ---------------------------------------------------------------------------
# Database (PostgreSQL)
# ---------------------------------------------------------------------------
DB_ENGINE=django.db.backends.postgresql
DB_NAME=raven_db
DB_USER=raven
DB_PASSWORD=changeme-use-a-strong-password
DB_HOST=db
DB_PORT=5432

# ---------------------------------------------------------------------------
# Redis (WebSocket channel layer + caching)
# ---------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# ---------------------------------------------------------------------------
# CORS (comma-separated origins allowed to call the API)
# ---------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ---------------------------------------------------------------------------
# Email (SMTP) - for invoice emails, notifications, password resets
# ---------------------------------------------------------------------------
# Django uses console backend in DEBUG mode, SMTP in production
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=changeme-smtp-password

# ---------------------------------------------------------------------------
# Digital Ocean Spaces (S3-compatible media storage, optional)
# ---------------------------------------------------------------------------
# Uncomment to use DO Spaces instead of local filesystem for media files.
# Requires django-storages[boto3] in requirements.txt.
#
# USE_SPACES=True
# AWS_ACCESS_KEY_ID=your-spaces-access-key
# AWS_SECRET_ACCESS_KEY=your-spaces-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=nyc3
# AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com
# AWS_S3_CUSTOM_DOMAIN=your-bucket-name.nyc3.cdn.digitaloceanspaces.com
# AWS_DEFAULT_ACL=public-read
# AWS_QUERYSTRING_AUTH=False

# ---------------------------------------------------------------------------
# CSRF Trusted Origins (required when behind reverse proxy with HTTPS)
# ---------------------------------------------------------------------------
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
