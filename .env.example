# Django Configuration
# Copy this file to .env and configure for your environment

# SECURITY WARNING: Never commit the actual .env file to version control!

# ==============================================================================
# REQUIRED SETTINGS
# ==============================================================================

# Set to False in production
DJANGO_DEBUG=True

# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# CRITICAL: Must be unique and secret in production
DJANGO_SECRET_KEY=django-insecure-change-this-in-production

# Comma-separated list of allowed hosts
# Example: DJANGO_ALLOWED_HOSTS=yourdomain.com,*.yourdomain.com,www.yourdomain.com
DJANGO_ALLOWED_HOSTS=*

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# For development (SQLite - default)
# No configuration needed

# For production (PostgreSQL - recommended)
# DATABASE_URL=postgresql://username:password@host:5432/database_name

# ==============================================================================
# EMAIL CONFIGURATION (Optional)
# ==============================================================================

# For password resets and notifications
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ==============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# ==============================================================================

# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1

# ==============================================================================
# SENTRY CONFIGURATION (Optional - for error tracking)
# ==============================================================================

# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================================================
# AWS S3 CONFIGURATION (Optional - for media file storage)
# ==============================================================================

# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ==============================================================================
# PRODUCTION CHECKLIST
# ==============================================================================
#
# Before deploying to production, ensure:
# 1. DJANGO_DEBUG=False
# 2. DJANGO_SECRET_KEY is randomly generated and secret
# 3. DJANGO_ALLOWED_HOSTS contains only your actual domains
# 4. DATABASE_URL points to PostgreSQL (not SQLite)
# 5. SSL/TLS certificates are configured
# 6. All environment variables are set in your hosting platform
#
# ==============================================================================
